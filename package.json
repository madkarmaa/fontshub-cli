{
    "name": "@madkarma/fontshub-cli",
    "version": "1.1.1",
    "devDependencies": {
        "@biomejs/biome": "2.2.6",
        "@clack/prompts": "^0.11.0",
        "@types/bun": "latest",
        "@types/cli-progress": "^3.11.6",
        "simple-git-hooks": "^2.13.1"
    },
    "peerDependencies": {
        "typescript": "^5.9.3"
    },
    "bin": {
        "fontshub": "./dist/index.js"
    },
    "description": "TypeScript CLI-only client for FontsHub",
    "scripts": {
        "biome": "biome check --write",
        "ci": "biome ci",
        "build": "tsc",
        "dev": "tsc --watch",
        "setup": "bun run ./scripts/setup.ts && bun i --force && bunx simple-git-hooks && bun run biome && git add . && git commit -m 'chore: project setup'",
        "tags": "git push origin --tags && git push",
        "patch": "bun pm version patch && bun run tags",
        "minor": "bun pm version minor && bun run tags",
        "major": "bun pm version major && bun run tags",
        "test": "bun test --reporter junit --reporter-outfile test-results.xml"
    },
    "type": "module",
    "files": [
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/madkarmaa/fontshub-cli.git"
    },
    "simple-git-hooks": {
        "pre-commit": "bun run biome"
    },
    "license": "MIT",
    "dependencies": {
        "@inquirer/prompts": "^8.1.0",
        "chalk": "^5.6.2",
        "cheerio": "^1.1.2",
        "cli-progress": "^3.12.0",
        "zod": "^4.2.1"
    }
}
